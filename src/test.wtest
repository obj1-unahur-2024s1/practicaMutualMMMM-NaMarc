describe "Test taller literario"{
	
	const elTunel = new Libro(autor = "Sabato", paginas = 93, idioma = "español")
	const elAleph = new Libro(autor = "Borges", paginas = 200,idioma = "español")
	const ficciones = new Libro(autor = "Borges", paginas = 450, idioma = "español")
	const taller1 = new TallerLiterario(libros=#{elTunel, elAleph})
	const taller2 = new TallerLiterario(libros=#{elAleph, ficciones})
	
	test "El idioma debe ser español"{
		
		assert.equals(#{"español"},taller1.idioma())
	}
	test "Los autores del taller son Borges  y Sabato"{
		
		assert.equals(#{"Sabato", "Borges"},taller1.autores())
	}
	test "Los días que dura deben ser 3"{
		
		assert.equals(3, taller1.dias())
	}
	test "La actividad no es para broncearse"{
		
		assert.notThat(taller1.broncearse())
	}
	test "taller con libros del mismo autor"{
		assert.that(taller2.mismoAutor())
	}
	test "La actividad requiere esfuerzo"{
		
		assert.notThat(taller1.requiereEsfuerzo())
		assert.that(taller2.requiereEsfuerzo())
	}
	
}