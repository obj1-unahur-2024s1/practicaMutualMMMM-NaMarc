import actividades.*

describe "Test viaje de playa"{
	
	const mardel = new ALaPlaya(idiomas=#{"español"}, longitudPlaya = 1500)
	
	test "El idioma debe ser Español"{
		
		assert.equals(#{"español"},mardel.idiomas())
	}
	test "La longitud debe ser 1500"{
		
		assert.equals(1500,mardel.longitudPlaya())
	}
	test "Los días que dura deben ser 3"{
		
		assert.equals(3,mardel.dias())
	}
	test "El viaje es para broncearse"{
		
		assert.that(mardel.broncearse())
	}
	test "El viaje requiere esfuerzo"{
		
		assert.that(mardel.requiereEsfuerzo())
	}
	test "El viaje no es interesante"{
		
		assert.notThat(mardel.esInteresante())
	}
}
